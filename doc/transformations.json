{
  "transformations": [
        {
          "name": "validation",
          "type": "validate_fields",
          "params": {
            "input" : "person_inputs",
            "validations": [
              {
                "field": "office",
                "validations": ["notEmpty"]
              },
              {
                "field": "age",
                "validations": ["notNull"]
              }
            ]
          }
        },
        {
          "name": "ok_with_date",
          "type": "add_fields",
          "params": {
            "input": "validation_ok",
            "addFields": [
              {
                "name": "dt",
                "function": "current_timestamp"
              }
            ]
          }
        }
      ]
}